{
  "name": "word_counter",
  "description": "A tool for analyzing text, providing word counts, character counts, and detailed linguistic analysis",
  "input_schema": {
    "type": "object",
    "properties": {
      "text": {
        "type": "string",
        "description": "The text to analyze"
      }
    },
    "required": ["text"],
    "additionalProperties": false
  },
  "returns": {
    "type": "object",
    "properties": {
      "basic_stats": {
        "type": "object",
        "properties": {
          "word_count": {"type": "integer"},
          "char_count": {"type": "integer"},
          "line_count": {"type": "integer"},
          "unique_words": {"type": "integer"}
        }
      }
    }
  }
}