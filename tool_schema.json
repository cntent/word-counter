{
  "name": "word_counter",
  "description": "A tool for analyzing text, providing word counts, character counts, and detailed linguistic analysis",
  "input_schema": {
    "type": "object",
    "properties": {
      "text": {
        "type": "string",
        "description": "The text to analyze"
      }
    },
    "required": ["text"],
    "additionalProperties": false
  },
  "parameters": {
    "type": "object",
    "properties": {
      "model": {
        "type": "string",
        "enum": ["claude-3-5-sonnet-20241022"]
      },
      "max_tokens": {
        "type": "integer"
      },
      "temperature": {
        "type": "number"
      }
    }
  }
}